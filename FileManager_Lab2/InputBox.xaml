<Window x:Class="FileManager_Lab2.InputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InputBox" Height="200" Width="300">
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="5*"></RowDefinition>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="2">
            <TextBlock Background="Black"  Margin="3" Foreground="White" FontSize="15" Text="Веддіть:">
                
            </TextBlock>
            <TextBox Margin="5" Name="TextBox1"></TextBox>
            <Border Margin="5">
                <Button  Margin="5" FontSize="30" Command="New">OK</Button>
            </Border>
        </StackPanel>
    </Grid>
</Window>
